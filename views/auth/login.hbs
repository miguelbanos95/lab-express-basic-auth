
<div class="row justify-content-center mt-4">
    <div class="col-sm-4">
        <h2>Log in</h2>
        <form method="POST" action="/login" class="mt-3">
        
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input 
                value="{{user.email}}" 
                name="email" type="email"
                class="form-control {{#if errors.email}} is-invalid {{/if}}" 
                placeholder="Enter email">
                {{!-- {{#if errors.email}}
                <div class="invalid-feedback">{{errors.email}}</div>
                {{/if}} --}}
            </div>
            <div class="mb-3">
                <label 
                for="exampleInputPassword1" 
                class="form-label">Password</label>
                <input 
                name="password" 
                type="password" 
                class="form-control {{#if errors.email}} is-invalid {{/if}}"
                placeholder="Password"> 
                {{#if errors.email}}
                <div class="invalid-feedback">{{errors.email}}</div>
                {{/if}}
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Do not sign out</label>
            </div>
            <button type="submit" class="btn btn-primary">Following</button>
        </form>
    </div>
</div>